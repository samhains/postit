<%= render 'shared/errors', obj: @post %>

<div class = "well">
  <%= form_for @post do |f| %>
    <div class='control-group'>
    <%= f.label :title %>
    <%= f.text_field :title %>
    </div>
    
    <div class='control-group'>
      <%= f.label :description %>
      <%= f.text_area :description, rows: 5 %> <br>
    </div>
    <div class='control-group'>
     <%= f.label "Categories" %>
      </div>

    <%=   f.collection_check_boxes(:category_ids, Category.all, :id, :name) do |b| %>
     <%= b.label class: "checkbox inline" %> <%=b.check_box class: "checkbox" %>
    
    <% end %>
    <br>
    <%= f.submit class: 'btn btn-primary' %>
  <% end %>
 
</div>

